<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagenfondo"
    tools:context="Vista.Detalle">

    <ImageView
        android:id="@+id/imagenDetalle"
        android:layout_width="177dp"
        android:layout_height="293dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/descDetalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/elnombredelviento" />

    <TextView
        android:id="@+id/tituloDetalle"
        android:layout_width="273dp"
        android:layout_height="70dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:text="texto"
        android:textSize="23sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/imagenDetalle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/descDetalle"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="440dp"
        android:scrollbars="vertical"
        android:text="Este es el contenido de texto"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tituloDetalle" />
</androidx.constraintlayout.widget.ConstraintLayout>